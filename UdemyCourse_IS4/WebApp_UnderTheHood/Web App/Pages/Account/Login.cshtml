@page
@model Web_App.Pages.Account.LoginModel
@{
}


<p><h3>User Login</h3></p>
<div class="container border" style="padding:20px">
    <form method="post">

        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Creds.Email"> Email: </label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Creds.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Creds.Email"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Creds.Password"> Password: </label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Creds.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Creds.Password"></span>
        </div>
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" asp-for="Creds.RememeberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="Creds.RememeberMe"></label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-2">
                <a class="btn btn-link" href="/Account/Register">Sign Up" </a>
            </div>
        </div>
    </form>
</div>