@page
@model Web_App.Pages.Account.RegisterModel
@{}

<p><h3>User Registration</h3></p>
    

    <div class="container border" style="padding:20px">
        <form method="post">

            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="RegisterView.Email"> Email: </label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="RegisterView.Email" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="RegisterView.Email"></span>
            </div>
            <br>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="RegisterView.Password"> Password: </label>
                </div>
                <div class="col-5">
                    <input type="password" asp-for="RegisterView.Password" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="RegisterView.Password"></span>
            </div>
            
            <div class="form-group row">
                <div class="col-2">
                    <input type="submit" class="btn btn-primary" value="Register" />
                </div>

            </div>


        </form>
    </div>








