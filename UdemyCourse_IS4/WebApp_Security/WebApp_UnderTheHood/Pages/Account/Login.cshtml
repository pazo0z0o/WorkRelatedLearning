@page
@model WebApp_UnderTheHood.Pages.Account.LoginModel
@{




}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credentials.UserName"> </label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credentials.UserName" class="form-control" />
                <span class="text-danger"asp-validation-for="Credentials.UserName"></span>
            </div>
        </div>
       
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credentials.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credentials.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Credentials.Password"></span>

            </div>
        </div>

        <div class="mb-3 row">
           
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            
            <div class="col-5"></div>
        
        </div>
    </form>


</div>
