@page
@model RegisterModel
@{
}
<h3> User Registration</h3> <br />
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div> @* All:important to capture all errors not just on the model *@
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.Email"></label>
                <span class="text-danger" asp-validation-for="RegisterViewModel.Email"></span>
            </div>
            <div class="col-5">
                <input type="text" asp-for="RegisterViewModel.Email" class="form-control" />
                <span class="text-danger" asp-validation-for"="RegisterViewModel.Email"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="RegisterViewModel.Password" class="form-control" autocomplete="current-password" />
                <span class="text-danger" asp-validation-for"="RegisterViewModel.Password"></span>
            </div>
        </div>
     
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register">
            </div>
            <div class="col-5"></div>

        </div>
    </form>


</div>