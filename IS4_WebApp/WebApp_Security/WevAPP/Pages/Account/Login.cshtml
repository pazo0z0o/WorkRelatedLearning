@page
@model WevAPP.Pages.Account.LoginModel
@{

} 

<h3> User Login</h3>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credentials.Email"></label>
                    <span class="text-danger" asp-validation-for="Credentials.Email"></span>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credentials.Email" class="form-control" />
                <span class="text-danger" asp-validation-for"="Credential.Email"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Credentials.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credentials.Password" class="form-control" autocomplete="current-password" />
                <span class="text-danger" asp-validation-for"="Credentials.Password"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <input type="checkbox" class="form-check-input" value="Credentials.RememberMe">
                <label class="form-check-label" asp-for="Credentials.RememberMe"></label>
            </div>
            <div class="col-5"></div>

        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login">
             </div>
            <div class="col-5"></div>
        
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <a class="btn btn-link" href="/Account/Register">Sign Up</a>
            </div>
        </div>
    </form>


</div>